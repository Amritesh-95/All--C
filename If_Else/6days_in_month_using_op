#include <stdio.h>
void main()
{
    int n;

    printf(" Input a month n ");
    scanf("%d", &n);

    if (n == 1 || n == 3 || n == 5 || n == 7 || n == 8 || n == 10 || n == 12)
    {
        printf(" Number of days = 31 ");
    }
    else if (n == 4 || n == 6 || n == 9 || n == 11)
    {
        printf(" Number of days = 30 ");
    }
    else if (n == 2)
    {
        printf(" Number of days = 28 ");
    }
    else
    {
        printf(" Please input a valid month 1-12 ");
    }
}
